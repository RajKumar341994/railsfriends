<p style="color: green"><%= notice %></p>

<% if user_signed_in? %>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>colspan="3"</th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
    <%= render friend %>
    <p>
      <%= link_to "Show this friend", friend, class:"btn btn-secondary"%>
    </p>
  <% end %>
    </tbody>
  </table>
  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
  <% else %>
    <h1>Hello World!2</h1>
  <% end %>

   

